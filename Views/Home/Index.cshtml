@{ ViewData["Title"] = "Home Page"; }

<div class="container space-above">
    <div class="row">
        <div class="col-sm-4 centralized">
            <img src="~/images/community-logo.png" alt="Singapore .NET Developer Community" />
        </div>

        <div class="col-sm-8">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/images/meetup-banner-1.jpg" alt="Beginners, expert, masters, start-ups, students are welcomed to join this group." class="img-responsive" />
                        <div class="carousel-caption" role="option">
                            <p>
                                Beginners, expert, masters, start-ups, students are welcomed to join this group.
                                <a class="btn btn-success" href="https://www.meetup.com/NET-Developers-SG">
                                    Join Us!
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/images/meetup-banner-2.jpg" alt="Invoke-RestMethod usage with IoT devices and PowerShell Core." class="img-responsive" />
                        <div class="carousel-caption" role="option">
                            <p>
                                Learn Invoke-RestMethod usage with IoT devices and PowerShell Core.
                                <a class="btn btn-success" href="https://www.meetup.com/NET-Developers-SG/events/234961113/">
                                    Learn More
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/images/meetup-banner-3.jpg" alt="We as the .NET developers community can do more, helping others who wants to learn .NET as well." class="img-responsive" />
                        <div class="carousel-caption" role="option">
                            <p>
                                We as the .NET developers community can do more, helping others who wants to learn .NET as well.
                                <a class="btn btn-default" href="https://web.facebook.com/groups/sg.netdev/">
                                    Learn More
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>